<%- include('../header')%>
<!-- Page Header-->
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Nova vaga</h2>
    </div>
</header>
<!-- Breadcrumb-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item"><a href="/admin/vagas">Vagas</a></li>
        <li class="breadcrumb-item active">Nova vaga</li>
    </ul>
</div>
<!-- Forms Section-->
<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <!-- Basic Form-->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Cadastro de vaga</h3>
                    </div>
                    <div class="card-body">
                        <p>Lorem ipsum dolor sit amet consectetur.</p>
                        <form method="POST" class="needs-validation" novalidate>
                            <div class="form-group">
                                <label class="form-control-label">Título</label>
                                <input type="text" name="titulo" placeholder="Título" class="form-control" required>
                                <div class="invalid-feedback">
                                    Insira o título da vaga
                                </div>
                                <div class="valid-feedback">
                                    Parece bom!
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Descrição</label>
                                <textarea class="form-control" name="descricao" rows="3" required></textarea>
                                <div class="invalid-feedback">
                                    Insira a descrição da vaga
                                </div>
                                <div class="valid-feedback">
                                    Parece bom!
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Categoria</label>
                                <select class="form-control" name="categoria" required>
                                    <option value="">Selecione uma categoria</option>
                                    <% categorias.forEach(categoria=>{ %>
                                    <option value="<%- categoria.id %>">
                                        <%- categoria.categoria %>
                                    </option>
                                    <% }) %>
                                </select>
                                <div class="invalid-feedback">
                                    Selecione uma categoria
                                </div>
                                <div class="valid-feedback">
                                    Parece bom!
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Cadastrar" class="btn btn-primary">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('../footer')%>